            <ImageView
                android:id="@+id/imgTonyStark"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_margin="20dp"
                android:src="@drawable/tony_stark_new"/>
            <TextView
                android:id="@+id/txtNameTony"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tony Stark"
                android:layout_toRightOf="@id/imgTonyStark"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/txtEmailTony"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tony@starkindustries.com"
                android:layout_below="@id/txtNameTony"
                android:layout_toRightOf="@id/imgTonyStark"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/txtPhoneNumberTony"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 11155555"
                android:layout_toRightOf="@id/imgTonyStark"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                android:layout_below="@id/txtEmailTony"
                android:textSize="18sp"/>

